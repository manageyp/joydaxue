<div class="bg clearfix padder m-b">
  <h3>编辑 <%= @record.name %></h3>
</div>

<section class="col-lg-8">
    <div class="panel-body">
      <%= form_for([:admin, @record], html: {class: "form-horizontal", id: "ticket-type-1"}) do |f| %>
          <%= f.hidden_field :id %>
          <div class="form-group" id="ticket-name">
            <label class="col-lg-3 control-label">名称<span>*</span></label>
            <div class="col-lg-9">
              <%= f.text_field :name, class: "form-control", placeholder: "输入名称", data: {required: "true"} %>
            </div>
          </div>

          <div class="form-group" id="ticket-display_name">
            <label class="col-lg-3 control-label">性别<span>*</span></label>
            <div class="col-lg-9">
              <%= select_tag "user[sex]", select_tag_options_for(User::SEX_TYPES, selected: @record.sex.to_s, name: "选择性别"), {class: "form-control"} %>
            </div>
          </div>

          <div class="form-group" id="ticket-email">
            <label class="col-lg-3 control-label">邮箱<span>*</span></label>
            <div class="col-lg-9">
              <%= f.text_field :email, class: "form-control", placeholder: "输入邮箱", data: {required: "true"} %>
            </div>
          </div>

          <div class="form-group" id="ticket-cellphone">
            <label class="col-lg-3 control-label">手机号<span>*</span></label>
            <div class="col-lg-9">
              <%= f.text_field :cellphone, class: "form-control", placeholder: "输入手机号", data: {required: "true"} %>
            </div>
          </div>

          <div class="form-group" id="ticket-display_name">
            <label class="col-lg-3 control-label">姓名<span>*</span></label>
            <div class="col-lg-9">
              <%= f.text_field :display_name, class: "form-control", placeholder: "输入姓名", data: {required: "true"} %>
            </div>
          </div>

          <div class="form-group" id="ticket-name">
            <label class="col-lg-3 control-label">状态</label>
            <div class="col-lg-9">
              <%= f.radio_button :status, 0 %>&nbsp;&nbsp;<label for="user_status_0">正常</label>&nbsp;&nbsp;
              <%= f.radio_button :status, 1 %>&nbsp;&nbsp;<label for="user_status_1">锁定</label>
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-9 col-lg-offset-3">
              <a href="/admin/users" class="btn btn-white">取消</a>&nbsp;&nbsp;
              <button type="submit" class="btn btn-primary">保存</button>
            </div>
          </div>

      <% end %>
    </div>
</section>